@import '/styles/variables.wxss';
@import '/styles/common.wxss';

.page {
  background-color: var(--background-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 通用区域样式 */
.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 举报类型 */
.report-types {
  margin: 32rpx;
}

.types-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.type-item {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx 24rpx;
  text-align: center;
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  transition: all 0.3s ease;
}

.type-item:active {
  transform: scale(0.95);
}

.type-item.selected {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, #fff, #f8f9ff);
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.2);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.type-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 详细信息 */
.report-details {
  margin: 32rpx;
}

.form-container {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.required {
  color: var(--error-color);
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: var(--background-color);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  transition: border-color 0.3s ease;
}

.form-input:focus {
  border-color: var(--primary-color);
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: var(--background-color);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
  transition: border-color 0.3s ease;
}

.form-textarea:focus {
  border-color: var(--primary-color);
}

.input-counter {
  text-align: right;
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.location-input {
  position: relative;
}

.location-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 上传证据 */
.evidence-section {
  margin: 32rpx;
}

.upload-container {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.uploaded-files {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.file-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.file-preview {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.file-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: var(--background-color);
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.upload-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 24rpx;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.upload-hint {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 紧急程度 */
.urgency-section {
  margin: 32rpx;
}

.urgency-options {
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.urgency-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s ease;
}

.urgency-item:last-child {
  border-bottom: none;
}

.urgency-item:active {
  background-color: var(--background-color);
}

.urgency-item.selected {
  background: linear-gradient(135deg, #fff, #f8f9ff);
  border-left: 4rpx solid var(--primary-color);
}

.urgency-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.urgency-icon.low {
  background: #d4edda;
  color: #155724;
}

.urgency-icon.medium {
  background: #fff3cd;
  color: #856404;
}

.urgency-icon.high {
  background: #f8d7da;
  color: #721c24;
}

.urgency-content {
  flex: 1;
}

.urgency-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.urgency-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 提交区域 */
.submit-section {
  margin: 32rpx;
}

.submit-tips {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--radius-md);
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.submit-btn:active {
  background: var(--secondary-color);
  transform: scale(0.98);
}

.submit-btn:disabled {
  background: var(--text-disabled);
  transform: none;
}

.btn-icon {
  font-size: 32rpx;
}

/* 历史举报 */
.history-section {
  margin: 32rpx;
}

.view-all {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.history-list {
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.history-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.3s ease;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: var(--background-color);
}

.history-content {
  flex: 1;
}

.history-title {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.status-icon {
  font-size: 20rpx;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

.history-status.pending .status-text {
  color: var(--warning-color);
}

.history-status.processing .status-text {
  color: var(--primary-color);
}

.history-status.resolved .status-text {
  color: var(--success-color);
}

.history-status.rejected .status-text {
  color: var(--error-color);
}

.history-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.history-arrow {
  font-size: 32rpx;
  color: var(--text-disabled);
}

/* 空状态 */
.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  background: white;
  border-radius: var(--radius-lg);
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: var(--radius-lg);
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-primary);
  text-align: center;
}