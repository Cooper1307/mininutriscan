@import '/styles/variables.wxss';
@import '/styles/common.wxss';

.page {
  background-color: var(--background-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 结果卡片 */
.result-card {
  margin: 32rpx;
  background: white;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
}

/* 食品图片 */
.food-image-container {
  position: relative;
  height: 300rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.food-image {
  width: 100%;
  height: 100%;
}

.confidence-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.confidence-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 基本信息 */
.basic-info {
  padding: 32rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.food-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.detection-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 安全评级 */
.safety-rating {
  padding: 32rpx;
}

.rating-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.rating-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  animation: pulse 2s infinite;
}

.rating-icon.safe {
  background: linear-gradient(135deg, #d4edda, #c3e6cb);
  color: #155724;
}

.rating-icon.warning {
  background: linear-gradient(135deg, #fff3cd, #ffeaa7);
  color: #856404;
}

.rating-icon.danger {
  background: linear-gradient(135deg, #f8d7da, #f5c6cb);
  color: #721c24;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.rating-info {
  flex: 1;
}

.rating-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.rating-title.safe {
  color: var(--success-color);
}

.rating-title.warning {
  color: var(--warning-color);
}

.rating-title.danger {
  color: var(--error-color);
}

.rating-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.score-bar {
  width: 100%;
  height: 12rpx;
  background: var(--background-color);
  border-radius: 6rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 1s ease;
  animation: fillAnimation 2s ease;
}

.score-fill.safe {
  background: linear-gradient(90deg, var(--success-color), #28a745);
}

.score-fill.warning {
  background: linear-gradient(90deg, var(--warning-color), #ffc107);
}

.score-fill.danger {
  background: linear-gradient(90deg, var(--error-color), #dc3545);
}

@keyframes fillAnimation {
  0% { width: 0%; }
}

/* 详细结果 */
.details-section {
  margin: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.details-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.detail-item {
  background: white;
  border-radius: var(--radius-md);
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  display: flex;
  align-items: center;
  transition: transform 0.3s ease;
}

.detail-item:active {
  transform: scale(0.95);
}

.detail-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.detail-content {
  flex: 1;
}

.detail-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 建议区域 */
.suggestions-section {
  margin: 32rpx;
}

.suggestions-list {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  margin: 32rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: var(--primary-color);
  color: white;
}

.action-btn.primary:active {
  background: var(--secondary-color);
  transform: scale(0.95);
}

.action-btn.secondary {
  background: white;
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
}

.action-btn.secondary:active {
  background: var(--background-color);
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
}

/* 相关推荐 */
.recommendations-section {
  margin: 32rpx;
}

.recommendations-scroll {
  white-space: nowrap;
}

.recommendations-list {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx 0 0;
}

.recommendation-card {
  width: 280rpx;
  background: white;
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
  transition: transform 0.3s ease;
  flex-shrink: 0;
}

.recommendation-card:active {
  transform: scale(0.95);
}

.recommendation-image {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
}

.recommendation-content {
  padding: 24rpx;
}

.recommendation-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommendation-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 专家点评 */
.expert-section {
  margin: 32rpx;
}

.expert-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.expert-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.expert-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.expert-info {
  flex: 1;
}

.expert-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.expert-title {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.expert-content {
  background: var(--background-color);
  border-radius: var(--radius-md);
  padding: 24rpx;
  border-left: 4rpx solid var(--primary-color);
}

.expert-text {
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.6;
}

/* 举报区域 */
.report-section {
  margin: 32rpx;
  text-align: center;
  padding: 32rpx;
}

.report-hint {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.report-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: transparent;
  color: var(--text-secondary);
  font-size: 24rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 40rpx;
  padding: 12rpx 24rpx;
  transition: all 0.3s ease;
}

.report-btn:active {
  background: var(--background-color);
  transform: scale(0.95);
}

.report-icon {
  font-size: 20rpx;
}

/* 分享弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 9999;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.share-modal {
  width: 100%;
  background: white;
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
  padding: 32rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  0% { transform: translateY(100%); }
  100% { transform: translateY(0); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-secondary);
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.modal-close:active {
  background-color: var(--background-color);
}

.share-options {
  display: flex;
  justify-content: space-around;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border-radius: var(--radius-md);
  transition: background-color 0.3s ease;
}

.share-option:active {
  background-color: var(--background-color);
}

.share-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.share-text {
  font-size: 24rpx;
  color: var(--text-primary);
}