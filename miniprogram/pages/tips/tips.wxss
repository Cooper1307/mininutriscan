/* 营养贴士页面样式 */
.page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 搜索区域 */
.search-section {
  padding: 20rpx 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-clear {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx;
}

/* 分类标签 */
.category-section {
  padding: 0 30rpx 20rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: 15rpx;
}

.category-item {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.category-item.active {
  background: white;
  border-color: #667eea;
  transform: scale(1.05);
}

.category-name {
  font-size: 26rpx;
  color: white;
}

.category-item.active .category-name {
  color: #667eea;
  font-weight: bold;
}

/* 贴士列表 */
.tips-section {
  background: rgba(255, 255, 255, 0.95);
  margin: 0 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  min-height: 600rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-card {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border-left: 4rpx solid #667eea;
}

.tip-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.tip-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
  margin-top: 5rpx;
}

.tip-meta {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  line-height: 1.3;
}

.tip-category {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.tip-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.tip-like {
  font-size: 28rpx;
  padding: 8rpx;
  transition: transform 0.2s ease;
}

.tip-like.active {
  transform: scale(1.2);
}

.tip-like-count {
  font-size: 20rpx;
  color: #999;
}

.tip-content {
  margin-bottom: 15rpx;
}

.tip-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tip-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tip-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tip-tag {
  font-size: 20rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.tip-read-time {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}

/* 推荐阅读 */
.recommend-section {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx 30rpx 0;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-date {
  font-size: 24rpx;
  color: #999;
}

.recommend-scroll {
  white-space: nowrap;
}

.recommend-list {
  display: flex;
  gap: 20rpx;
}

.recommend-item {
  background: #f8f9ff;
  border-radius: 15rpx;
  padding: 20rpx;
  width: 280rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.recommend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.recommend-icon {
  font-size: 32rpx;
}

.recommend-category {
  font-size: 20rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.recommend-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.recommend-summary {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recommend-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recommend-read-time,
.recommend-likes {
  font-size: 20rpx;
  color: #999;
}

/* 每日一贴 */
.daily-section {
  background: rgba(255, 255, 255, 0.95);
  margin: 20rpx 30rpx 0;
  border-radius: 20rpx;
  padding: 30rpx;
}

.daily-card {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  padding: 25rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.daily-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.daily-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.daily-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.daily-meta {
  flex: 1;
}

.daily-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.daily-category {
  font-size: 22rpx;
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.daily-content {
  display: block;
  font-size: 24rpx;
  line-height: 1.5;
  margin-bottom: 15rpx;
  opacity: 0.9;
}

.daily-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.daily-tip {
  font-size: 22rpx;
  opacity: 0.8;
}

.daily-arrow {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 贴士详情弹窗 */
.tip-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

.tip-detail {
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  max-height: 85vh;
  animation: slideUp 0.3s ease;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-meta {
  display: flex;
  align-items: center;
  flex: 1;
}

.detail-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.detail-info {
  flex: 1;
}

.detail-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.detail-category {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.detail-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.detail-content {
  max-height: calc(85vh - 200rpx);
  padding: 0 30rpx;
}

.detail-summary {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.summary-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  font-weight: 500;
}

.detail-body {
  margin-bottom: 30rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-tag {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
}

.detail-references {
  margin-bottom: 20rpx;
}

.references-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.references-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.reference-item {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  padding-left: 15rpx;
  position: relative;
}

.reference-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #999;
}

.detail-actions {
  display: flex;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #eee;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  border: none;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.action-btn.secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 26rpx;
}

.btn-count {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 响应式调整 */
@media (max-width: 400px) {
  .tip-card {
    padding: 20rpx;
  }
  
  .recommend-item {
    width: 250rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .page {
    background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
  }
  
  .search-box {
    background: rgba(45, 55, 72, 0.95);
    color: white;
  }
  
  .search-input {
    color: white;
  }
  
  .tips-section,
  .recommend-section,
  .daily-section {
    background: rgba(45, 55, 72, 0.95);
  }
  
  .tip-card {
    background: #2d3748;
  }
  
  .tip-title {
    color: white;
  }
  
  .section-title {
    color: white;
  }
}