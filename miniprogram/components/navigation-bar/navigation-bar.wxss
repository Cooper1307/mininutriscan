.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: white;
  border-bottom: 1rpx solid var(--border-color);
}

.nav-content {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
}

.nav-left {
  width: 80rpx;
}

.nav-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: var(--background-color);
  transition: all 0.3s ease;
}

.nav-back:active {
  transform: scale(0.9);
  background: var(--border-color);
}

.icon-back {
  font-size: 48rpx;
  color: var(--text-primary);
  font-weight: bold;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.nav-right {
  width: 80rpx;
  display: flex;
  justify-content: flex-end;
}